{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["es6", "dom", "es2017"],
        "baseUrl": ".",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noEmitHelpers": true,
        "skipLibCheck": true,
        "plugins": [{
            "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
            "type": "raw"
          }]
    },
    "exclude": [
        "node_modules",
        "platforms",
        "hooks"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "genDir": "."
    }
}
